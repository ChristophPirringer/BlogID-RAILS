<%= form_tag user_foods_path(current_user), :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<div class="container">
  <div class="block" id="consumed">

    <% if current_user %>
      <% if @foods.any? %>
      <h4>You ate a friggin <span id="consumed_total"><%= @foods.sum(:calories) %></span> calories!!!</h4>
      <ul id="food_list">

        <% @foods.each do |food| %>
          <%= render food %>
        <% end %>
      </ul>
      <% else %>
        <p>You really should eat someting</p>
      <% end %>
      <%= link_to 'Enter Food', new_user_food_path(current_user), id: "new_food_link", remote: true %>
    <% else %>
      <p>
        Please log in to use the Awesome that is this app.
      </p>
    <%end %>
  </div>

  <div class="block" id="burned">

    <% if current_user %>
      <% if @exercises.any? %>
      <h4>You burned a friggin <span id="burned_total"><%= @exercises.sum(:calories) %></span> calories!!!</h4>
      <ul id="exercise_list">

        <% @exercises.each do |exercise| %>
          <%= render exercise %>
        <% end %>
      </ul>
      <% else %>
        <p>You really should do someting</p>
      <% end %>
      <%= link_to 'Enter Exercise', new_user_exercise_path(current_user), id: "new_exercise_link", remote: true%>
    <% else %>
      <p>
        Please log in to use the Awesome that is this app.
      </p>
    <%end %>
  </div>

  <div class="block" id="total">
    <h4>Well that is a total of <span id="calorie_total"><%= @foods.sum(:calories) - @exercises.sum(:calories) %>
</span> straight
      <% if ( (@foods.sum(:calories) - @exercises.sum(:calories)) > 0) %>
        to your hips.
      <% else %>
        from your hips.
      <% end %>
    </h4>
  </div>
</div>
